        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vue"
        mc:Ignorable="d"
        Title="Login" Height="270.389" Width="371.728" FontFamily="Times New Roman" FontSize="14" FontWeight="Bold">
    <Grid HorizontalAlignment="Left" Margin="0,0,0,-0.2" Width="362">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Identifiez-vous" HorizontalAlignment="Left" Margin="125,23,0,0" VerticalAlignment="Top" Width="119" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold" Height="29" Grid.ColumnSpan="2"/>
        <Label Content="Identifiant" HorizontalAlignment="Left" Margin="81,72,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="14" FontWeight="Bold" Height="26" Width="74"/>
        <Label Content="Mot de passe" HorizontalAlignment="Left" Margin="67,112,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="14" FontWeight="Bold" Height="26" Width="88"/>
