        <TextBox x:Name="ErrorLogin" HorizontalAlignment="Left" Height="23" Margin="67,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" FontStyle="Italic" Background="White" BorderBrush="White" Foreground="Red" Grid.ColumnSpan="3"/>
        <PasswordBox x:Name="MotDePasseTextBox" HorizontalAlignment="Left" Margin="176,116,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="3" Height="22" BorderBrush="#FF06A5F7" Password=""/>

    </Grid>
</Window>
